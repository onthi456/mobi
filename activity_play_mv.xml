<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayMV">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/lvmusic"
        >

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/prem"

            android:drawableStart="@drawable/pre"
            >

        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btresume"
            android:drawableStart="@drawable/play"

            >
        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btstop"
            android:drawableStart="@drawable/pause"
            >
        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextm"

            android:drawableStart="@drawable/next"
            android:text=""
            >

        </Button>


    </LinearLayout>



</LinearLayout>